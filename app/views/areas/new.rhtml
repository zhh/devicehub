<% content_for :project_nav do %>
  <%= render :partial => 'dashboard/project_nav', :locals => { :tab => "areas" } %>
<% end %>

<% content_for :action_nav do %>
  <%= render :partial => 'dashboard/project_action_nav', :locals => { :tab => "newarea" } %>
<% end %>

<%= error_messages_for 'area' %>
<div class="group">
  <h3><%= _("Create A New Area") %></h3>
  <% form_for :area, :url => { :action => :new }, :html => { :class => "new_project" } do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <p class="btns right">
      <%= submit_tag _("Save"), :class => "button" %>
    </p>
  <% end %>
</div>
