<% content_for :page_top do %>
  <div class="greet clear">
    <h2><%= @area.project.name + ":" %><%= link_to @area.name, :action => 'list_for_area', :id => @area %></h2>
    <p class="gmeta"><%= @area.description %></p>
    <div class="gdesc"></div>
  </div>
<% end %>

<%= error_messages_for 'node' %>
<div class="group">
  <h3><%= _("Create A New Node") %></h3>
  <% form_for :node, :url => { :action => :new_for_area }, :html => { :class => "new_project" } do |f| %>
    <%= render :partial => 'form_for_area', :locals => { :f => f } %>
    <p class="btns right">
      <%= submit_tag _("Save"), :class => "button", :disable_with => _("Saving") %>
    </p>
  <% end %>
</div>
