<%= error_messages_for 'project' %>
<div class="group">
  <h3><%= _("Modify A Project") %></h3>
  <% form_for :project, :url => { :action => :edit }, :html => { :class => "new_project" } do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <p class="btns right">
      <%= submit_tag _("Save"), :class => "button", :disable_with => _("Saving") %>
    </p>
  <% end %>
</div>