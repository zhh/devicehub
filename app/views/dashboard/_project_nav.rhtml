<div id="project-nav">
  <ul>
    <% if local_assigns[:tab] == "overview" %>
      <li id="t-proj" class="submenu-tab selected">
      <% else %>
      <li id="t-proj" class="submenu-tab">
      <% end %>
      <%= link_to _("Overview") + "<em>more</em>", :controller => 'projects', :action => 'overview', :id => @project %>
      <ul style="display: none;" class="submenu">
        <%= render :partial => 'dashboard/nav_project_list', :collection => @projectlist %>
      </ul>

      <% if local_assigns[:tab] == "areas" %>
      <li class="selected">
      <% else %>
      <li>
      <% end %>
      <%= link_to _("Areas"), :controller => 'Areas', :action => 'overview', :id => @project %>
    </li>

    <li><%= link_to _("Nodes"), :controller => 'Areas', :action => 'index' %></li>
    <li><%= link_to _("Devices"), :controller => 'Areas', :action => 'index' %></li>
    <li><%= link_to _("Messages"), :controller => 'Areas', :action => 'index' %></li>

    <li id="quick-search">
      <a href="#" onclick="$('quick-search-bar').toggle(); $('q').focus(); return false">Search</a>
    </li>
  </ul>
</div>
